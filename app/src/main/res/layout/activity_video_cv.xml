<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".curriculumvitae.VideoCv">

    <TextView
        android:id="@+id/cv_add_video_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="12dp"
        android:text="@string/add_a_video_to_cvd"
        app:layout_constraintBottom_toTopOf="@+id/videoButtonCV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/videoButtonCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="13dp"
        android:text="@string/add"
        app:layout_constraintBottom_toTopOf="@+id/videoButtonCVSub"
        app:layout_constraintStart_toStartOf="@+id/videoButtonCVSub"
        app:layout_constraintTop_toBottomOf="@+id/cv_add_video_textView" />

    <VideoView
        android:id="@+id/videoViewCv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoButtonCVSub" />

    <Button
        android:id="@+id/videoButtonCVSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/submission"
        app:layout_constraintBottom_toTopOf="@+id/videoViewCv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoButtonCV" />


</androidx.constraintlayout.widget.ConstraintLayout>